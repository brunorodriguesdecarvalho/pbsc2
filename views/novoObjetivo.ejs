<!DOCTYPE html>
<html>
    <head>
        <title>Planejamento: Novo Objetivo</title>
        <%- include('meta'); %>
    </head>
    <body>
        <%- include('nav'); %>

        <main class="container mt-5">

            <section class="fmresp">
                <form>
                    <div class="row py-2 align-items-center">
                        <div class="col-1 bg-white font-weight-bold text-right">Título</div>
                        <div class="col-sm">
                            <input 
                                type="text" 
                                id="objNome" 
                                placeholder="Preencher com um nome de referência rápida"
                                required
                                style="width: 100%;height: 5vh;"
                            >
                        </div> 
                    </div>
                    <div class="row py-2 align-items-center">
                        <div class="col-2 bg-white font-weight-bold text-right">Status</div>
                        <div class="col-sm col-lg">
                            <select id="objStat" required style="width: 150px; height: 5vh;"></select>
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Descrição</div>
                            <div>
                                <textarea id="objDesc" style="width: 100%; height: 15vh;"></textarea>
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Riscos</div>
                            <textarea id="objRisk" style="width: 100%; height: 15vh;"></textarea> 
                        </div>
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Motivação</div>
                            <textarea id="objMot" style="width: 100%; height: 15vh;"></textarea>
                        </div>
                    </div>
                    <div class="row align-items-end">
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Criação</div>
                            <div>
                                <input type="datetime-local" required id="objDataCria" style="width: 100%;">
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Prazo</div>
                            <input type="datetime-local" required id="objDataFim" style="width: 100%;"> 
                        </div>
                        <div class="col-sm">
                            <button 
                                id="enviar" 
                                style="width: 100%;"
                                class="bg-dark text-white font-weight-bold border-0 p-2 rounded btresp"
                            >
                                Gravar
                            </button>
                            <input 
                                type="hidden" 
                                style="display: block;" 
                                id="userID" 
                                value="<%= user._id %>" 
                            >
                        </div>
                    </div>
                    
                </form>
            </section>
        </main>
    </body>
    <%- include('scripts'); %>
    <script src="../src/gravarNovoObjetivo.js" type="text/javascript"></script>
    <script src="../src/ajustaDataBr.js" type="text/javascript"></script>
    <script src="../src/titulo.js" type="text/javascript"></script>
    <script src="../src/statusObjetivo.js"></script>
    <script src="../src/dataObjetivo.js"></script>
</html>


<!DOCTYPE html>
<html>
    <head>
        <title>Planejamento: Nova Iniciativa</title>
        <%- include('meta'); %>

        <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

        <script src="../src/gravarNovaIniciativa.js" type="text/javascript"></script>
        <script src="../src/ajustaDataBr.js" type="text/javascript"></script>

    </head>
    <body>
        <%- include('navPlan'); %>

        <main class="container mt-5">
            <section class="fmresp">
                <form>
                    <div class="row py-2 align-items-center">
                        <div class="col-1 bg-white font-weight-bold text-right">Título</div>
                        <div class="col-sm">
                            <input 
                                type="text" 
                                id="iniNome" 
                                placeholder="Preencher com um nome de referência rápida"
                                required
                                style="width: 100%;height: 5vh;"
                            >
                        </div> 
                    </div>
                    <div class="row py-2 align-items-center">
                        <div class="col-2 bg-white font-weight-bold text-right">Status</div>
                        <div class="col-sm col-lg">
                            <select id="iniStat" required style="width: 150px; height: 5vh;"></select>
                        </div> 
                    </div>
                    <div class="row py-2 align-items-center">
                        <div class="col-2 bg-white font-weight-bold text-right">Objetivo Associado</div>
                        <div class="col-sm col-lg">
                            <select id="iniObj" required style="width: 75%; height: 5vh;"></select>
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Descrição</div>
                            <div>
                                <textarea id="iniDesc" style="width: 100%; height: 15vh;"></textarea>
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Riscos</div>
                            <textarea id="iniRisk" style="width: 100%; height: 15vh;"></textarea> 
                        </div>
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Motivação</div>
                            <textarea id="iniMot" style="width: 100%; height: 15vh;"></textarea>
                        </div>
                    </div>
                    <div class="row align-items-end">
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Criação</div>
                            <div>
                                <input type="datetime-local" required id="iniDataCria" style="width: 100%;">
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="py-2 bg-white font-weight-bold">Prazo</div>
                            <input type="datetime-local" required id="iniDataFim" style="width: 100%;"> 
                        </div>
                        <div class="col-sm">
                            <button 
                                id="enviar" 
                                style="width: 100%;"
                                class="bg-dark text-white font-weight-bold border-0 p-2 rounded btresp"
                            >
                                Gravar
                            </button>
                            <input 
                                type="hidden" 
                                style="display: block;" 
                                id="userID" 
                                value="<%= user._id %>" 
                            >
                        </div>
                    </div>
                    
                </form>
            </section>
            
        </main>
        
    </body>
    <script src="../src/titulo.js" type="text/javascript"></script>
    <script src="../src/statusIniciativa.js"></script>
    <script src="../src/listaObjetivos.js"></script>
    <script src="../src/dataIniciativa.js"></script>
    
</html>

